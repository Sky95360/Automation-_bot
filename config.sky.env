# ============================================
# MEGATOOLKIT CONFIGURATION
# Copy this file to config.env and edit values
# ============================================

# TELEGRAM BOT SETTINGS
# ======================
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321
ALLOWED_USER_IDS=*
BOT_USERNAME=@YourBotUsername

# API KEYS (Optional - for enhanced features)
# ===========================================
YOUTUBE_API_KEY=your_youtube_api_key_here
INSTAGRAM_SESSIONID=your_instagram_session_id
TWITTER_BEARER_TOKEN=your_twitter_token
OPENAI_API_KEY=your_openai_api_key
DROPBOX_ACCESS_TOKEN=your_dropbox_token
GOOGLE_DRIVE_CREDENTIALS=path/to/credentials.json

# AUTOMATION SETTINGS
# ===================
AUTO_BACKUP=true
AUTO_CLEANUP=true
BACKUP_INTERVAL=24
CLEANUP_OLDER_THAN_DAYS=7
SCAN_INTERVAL=3600
MAX_CONCURRENT_DOWNLOADS=3
TIMEZONE=UTC

# PATHS & DIRECTORIES
# ===================
DOWNLOADS_PATH=./downloads
LOG_PATH=./logs
DATA_PATH=./data
TEMP_PATH=./temp
BACKUP_PATH=./backups

# LOGGING SETTINGS
# ================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_ROTATION_SIZE=10
KEEP_LOG_FILES=7

# SECURITY SETTINGS
# =================
ENCRYPTION_KEY=your_encryption_key_here
ALLOWED_DOMAINS=*
MAX_FILE_SIZE_MB=500
ENABLE_RATE_LIMITING=true

# NOTIFICATION SETTINGS
# =====================
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
TELEGRAM_NOTIFICATIONS=true

# WEB SERVER (For Render deployment)
# ==================================
PORT=8080
HOST=0.0.0.0
WEBHOOK_URL=https://your-app.onrender.com

# FEATURE TOGGLES
# ===============
ENABLE_TORRENT=true
ENABLE_CLOUD_BACKUP=false
ENABLE_SOCIAL_AUTOMATION=false
ENABLE_WEB_MONITORING=true
ENABLE_AI_FEATURES=false
